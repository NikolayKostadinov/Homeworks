<Window x:Name="ImageViewer" x:Class="ImageViewerMVVM.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:userControls="clr-namespace:ImageViewerMVVM.Views"
        Title="MainWindow" Height="440" Width="539" BorderThickness="10" WindowStyle="ThreeDBorderWindow">
	<Window.Background>
		<LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
			<GradientStop Color="Black" Offset="0"/>
			<GradientStop Color="White" Offset="1"/>
		</LinearGradientBrush>
	</Window.Background>
	<Window.BorderBrush>
		<LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
			<GradientStop Color="Black" Offset="0"/>
			<GradientStop Color="#FF00021B" Offset="1"/>
		</LinearGradientBrush>
	</Window.BorderBrush>
    <Grid>
        <userControls:ImageViewer x:Name="ImageViewerMain" BorderThickness="5"/>
    </Grid>
</Window>
