<Window xmlns:my="clr-namespace:Proportional_Panels_Demo"  x:Class="Proportional_Panels_Demo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <StackPanel VerticalAlignment="Stretch">
        <Border BorderThickness="5" Margin="5" BorderBrush="Black">
            <StackPanel>
                <Button Content="Show Grid Example" Click="ShowGridButton_Click" Margin="5"/>
                <Button Content="Show UniformGrid Example" Click="ShowUniformGridButton_Click" Margin="5"/>
            </StackPanel>
        </Border>
        <my:GridControl x:Name="GridPanelControl" Visibility="Collapsed" />
        <my:UniformGrid x:Name="UniformGridPanelControl" Visibility="Collapsed"/>
    </StackPanel>
</Window>
